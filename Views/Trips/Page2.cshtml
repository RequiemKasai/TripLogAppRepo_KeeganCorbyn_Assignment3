@model TripsLogApp.Models.Trip

@{
    ViewData["Title"] = "Add Accommodation Info";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="FormPage2" method="post">
    <div class="form-group">
        <label for="AccommodationPhone">Phone Number</label>
        <input type="text" asp-for="AccommodationPhone" class="form-control" />
        <span asp-validation-for="AccommodationPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="AccommodationEmail">Email Address</label>
        <input type="email" asp-for="AccommodationEmail" class="form-control" />
        <span asp-validation-for="AccommodationEmail" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Destination" value="@ViewBag.Destination" />
    <input type="hidden" asp-for="StartDate" value="@ViewBag.StartDate" />
    <input type="hidden" asp-for="EndDate" value="@ViewBag.EndDate" />
    <input type="hidden" asp-for="Accommodation" value="@ViewBag.Accommodation" />

    <button type="submit" class="btn btn-primary">Next</button>
    <a href="/Trips" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
