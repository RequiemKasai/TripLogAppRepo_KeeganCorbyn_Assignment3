@model TripsLogApp.Models.Trip

@{
    ViewData["Title"] = "Add Trip Destination and Dates";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="FormPage1" method="post">
    <div>
        @* Display general validation errors *@
        <span asp-validation-summary="All" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Destination">Destination</label>
        <input type="text" asp-for="Destination" class="form-control" required />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Accommodation">Accommodations (optional)</label>
        <input type="text" asp-for="Accommodation" class="form-control" />
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input type="date" asp-for="StartDate" class="form-control" required />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input type="date" asp-for="EndDate" class="form-control" required />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a href="/Trips" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
