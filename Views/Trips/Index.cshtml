@model IEnumerable<TripsLogApp.Models.Trip>

@{
    ViewData["Title"] = "My Trip Log";
}

<div class="table-container">

    @* Display AddedTrip message *@
    @if (TempData["AddedTrip"] != null)
    {
        <div class="alert">@TempData["AddedTrip"]</div>
    }

    <a href="/Trips/AddPage1" class="button">Add Trip</a>

    <table>
        <thead>
            <tr>
                <th>Destination</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Accommodations</th>
                <th>Things To Do</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr>
                    <td>@trip.Destination</td>
                    <td>@trip.StartDate</td>
                    <td>@trip.EndDate</td>
                    <td>@trip.Accommodation</td>
                    <td>
                        @if (!string.IsNullOrEmpty(trip.ThingToDo1))
                        {
                            @trip.ThingToDo1 <br />
                        }
                        @if (!string.IsNullOrEmpty(trip.ThingToDo2))
                        {
                            @trip.ThingToDo2 <br />
                        }
                        @if (!string.IsNullOrEmpty(trip.ThingToDo3))
                        {
                            @trip.ThingToDo3
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert">@TempData["Message"]</div>
}
