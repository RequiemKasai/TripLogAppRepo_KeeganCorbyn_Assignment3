<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Trip Log</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false) 
    <style>
        /* Styling for the header */
        .banner {
            background-color: #333; 
            color: white; 
            padding: 20px 20px; 
            text-align: center;
        }

        /* Styling for the notification area */
        .notification {
            background-color: #eaeaea; 
            color: #444; 
            padding: 15px 20px; 
            margin: -10px auto 0; 
            border-radius: 100px; 
            font-size: 18px; 
            max-width: 800px; 
        }
    </style>

    <script>
        function confirmDeleteAll() {
            const userConfirmed = confirm("Are you sure you want to delete all trips?");
            if (userConfirmed) {
                // If the user confirms, submit the hidden form
                document.getElementById('deleteAllForm').submit();
            }
        }
    </script>
</head>
<body>
    <header>
        <div class="banner">
            <h1>My Trip Log</h1>
            @if (TempData["AddedTrip"] != null)
            {
                <div class="notification">
                    @TempData["AddedTrip"]
                </div>
            }
        </div>
    </header>
    <div class="content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My Trip Log</p>
    </footer>
    @RenderSection("Scripts", required: false)
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
