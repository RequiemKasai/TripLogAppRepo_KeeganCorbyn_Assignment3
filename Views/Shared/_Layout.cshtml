<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Trip Log</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false) 
</head>
<body>
    <header>
        <div class="banner">
            <h1>My Trip Log</h1>
            @if (TempData["AddedTrip"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["AddedTrip"]
                </div>
            }
        </div>
    </header>
    <div class="content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My Trip Log</p>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
