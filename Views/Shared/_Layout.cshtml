<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Trip Log</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="banner">
            <h1>My Trip Log</h1>
            <!-- Display the subhead only if ViewData["Subhead"] has value -->
            @if (!string.IsNullOrEmpty(ViewData["Subhead"] as string))
            {
                <h2>@ViewData["Subhead"]</h2>
            }
        </div>
    </header>
    <div class="content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My Trip Log</p>
    </footer>
</body>
</html>
